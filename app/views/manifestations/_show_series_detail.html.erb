<ul>
  <% manifestation.series_statements.each do |series_statement| %>
    <li>
      <% if series_statement.manifestation and manifestation.series_master? %>
        <%= link_to series_statement.original_title, series_statement.manifestation %>
      <% else %>
        <%= series_statement.original_title %>
      <% end %>
      <%= series_statement.volume_number_string %>
      <% unless series_statement.creator_string.blank? %>
        (<%= series_statement.creator_string %>)
      <% end %>
    </li>
  <% end %>
</ul>
